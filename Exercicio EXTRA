#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <locale.h>

//Exercicio EXTRA

main(){
      char palavra[50];
      int frase,
          contador,
          i;
    
          setlocale(LC_ALL,  "Portuguese");
    
          printf("Escreva uma palavra ou frase: ");
          gets(palavra);
          
          frase = 1;
       
          contador = strlen(palavra);
              
          for(i = 0; i <= contador; i++)
          {
              if(palavra[i] == ' ')
              {
                  frase++;
              }
          }
       
       printf("A quantidade de letras sÃ£o: %d ", frase);
       
    return 0;
}
